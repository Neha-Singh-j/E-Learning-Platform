<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

<style>
   body {
    background-color:blue; /* light blue */
    /* padding-top:20px; */
    color: #fdfdfd;
  }

  .card {
    background-color: #323f60;
    border-radius: 30px;
    color:white;
    box-shadow: 0px 4px 12px rgba(0,0,0,0.1);
  }

  h2 {
    color: #fff;
  }

  .bgc{
    background-color: #1a1f2b;
  }
  .form-label {
    color:white;
  }

  .btn-success {
    border-radius: 6px;
    background-color: Blue;
    box-shadow: 0px 2px 6px rgba(0,0,0,0.15);
  }
  .btn-success:hover {
    background-color: cyan;
    color:black;
  }

  a.text-success:hover {
    text-decoration: underline;
  }
</style>

<div class="container py-5" style="margin-top: 0px; margin-bottom: 50px;">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bgc text-white text-center py-3">
          <h2 class="mb-0 fw-bold">Welcome Back!</h2>
        </div>
        <div class="card-body p-4">
          <form action="/login" method="POST">
            
            <!-- Username -->
            <div class="mb-3">
              <label for="username" class="form-label fw-semibold">Username</label>
              <input 
                type="text" 
                class="form-control" 
                id="username" 
                name="username" 
                placeholder="Enter your username" 
                required
              >
            </div>

            <!-- Password -->
            <div class="mb-4">
              <label for="password" class="form-label fw-semibold">Password</label>
              <input 
                type="password" 
                class="form-control" 
                id="password" 
                name="password" 
                placeholder="Enter your password" 
                required
              >
            </div>

            <!-- Login Button -->
            <div class="d-grid mb-3">
              <button type="submit" class="btn  btn-success fw-bold py-2">
                Login
              </button>
            </div>

            <!-- Register Link -->
            <div class="text-center">
              <p class="mb-0">
                Donâ€™t have an account? 
                <a href="/register" class="fw-bold text-white text-decoration-none">
                  Sign up now
                </a>
              </p>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
